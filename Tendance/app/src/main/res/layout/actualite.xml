                    android:layout_height="50dp"
                    android:text="Look du jour ! #OOTD #Chic #Summer #Skirt #HighHeels #Fashion"
                    android:id="@+id/descr2"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.17"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@color/blanc"
                    android:id="@+id/picturesplace2">


                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="270dp"
                        android:id="@+id/outfit2"
                        android:layout_gravity="center_vertical"
                        android:background="@color/blanc"
                        android:src="@drawable/outfit1"/>
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="270dp"
                        android:id="@+id/selfie2"
                        android:layout_gravity="center_vertical"
                        android:background="@color/blanc"
                        android:src="@drawable/outfit2"/>
                </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/blanc"
                        android:layout_weight="0.70">

                        <ImageButton
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:id="@+id/like2"
                            android:background="@color/blanc"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="310dp"
                            android:src="@drawable/heart1"/>
                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/blanc"
                android:weightSum="1">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/blanc"
                    android:weightSum="1"
                    android:id="@+id/headerUser3">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
