<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="insa.tc.tendance.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:clickable="true">

        <ImageView
            android:layout_width="169dp"
            android:layout_height="178dp"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Let&apos;s talk about style"
            android:textStyle="bold|italic"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Noir" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mail"
            android:paddingLeft="60dp"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="258dp"
            android:layout_height="17dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/addMail"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mot de passe"
            android:paddingLeft="60dp"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="263dp"
            android:layout_height="20dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/mdp"
            android:layout_gravity="center_horizontal" />

        <Button
        android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:text="Se connecter"
            android:background="@drawable/buttonrond"
            android:id="@+id/connect"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blanc"
            android:clickable="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:text="Mot de passe oubliÃ© ?"
            android:textAllCaps="false"
            android:background="@null"
            android:id="@+id/mdpOublie"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textColor="@color/Noir" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:paddingTop="23dp"
                android:id="@+id/fb"
                android:src="@drawable/fb"
                android:clickable="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se connecter via Facebook"
                android:textAllCaps="false"
                android:paddingTop="20dp"
                android:id="@+id/connectFB"
                android:background="@null"
                android:textColor="@color/Noir" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Nouvel usager ? Inscrivez-vous"
            android:textAllCaps="false"
            android:background="@null"
            android:layout_gravity="center_horizontal"
            android:id="@+id/newUser"
            android:textSize="13dp"
            android:textColor="@color/Noir" />
    </LinearLayout>
</RelativeLayout>