<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="insa.tc.tendance">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActualiteActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".CalendarActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".PersonnelActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".DressingActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".FriendActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".FriendProfile"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".OutfitView"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>